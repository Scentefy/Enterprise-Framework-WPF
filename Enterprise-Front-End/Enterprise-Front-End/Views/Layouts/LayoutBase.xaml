<Page x:Class="Enterprise_Front_End.Views.Layouts.LayoutBase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Enterprise_Front_End.Views.Layouts"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="300"
      Title="LayoutBase" Height="720" Width="1080"
      Background="Aqua">

    <Grid Margin="0,0,-3,0">
        <Grid.ColumnDefinitions>
            <!--Navigation Page-->
            <ColumnDefinition Name="navigation_column" Width="20*">

            </ColumnDefinition>
            <!--Content Page-->
            <ColumnDefinition Name="content_column" Width="80*" >

            </ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Frame x:Name="navigation_frame" Content="nav" Height="auto" Width="{Binding ElementName=navigation_column, Path=ActualWidth}" Grid.Column="0"/>
        <Frame x:Name="content_frame" Content="Content" Height="auto" Grid.Column="1" Width="{Binding ElementName=content_column, Path=ActualWidth}" Grid.Row="1"/>
        <TextBox x:Name="textBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="109.333,236,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>





    </Grid>
</Page>
